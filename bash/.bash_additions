# Make bash and all readline programs operate in vi mode
set -o vi

# Automatically fix 'cd' spelling mistakes
shopt -s cdspell

# Make completion better
bind "set completion-ignore-case on"
bind "set show-all-if-ambiguous on"

# Go language binary location
export GOROOT=/usr/lib/go/
export GOBIN=$GOROOT/bin/
export PATH=$PATH:$GOBIN

# Rebind 'cd' to list contents after changing directory 
function cd() { builtin cd "${@:-$HOME}" && ls; }

# !! Might want to consider making a smarter way for adding paths; i.e. an array of string paths
